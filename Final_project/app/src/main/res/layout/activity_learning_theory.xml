<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="UI.Option.Learning_theory_question"
    android:background="#FFF6F4F4"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="376dp"
                android:layout_height="127dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/design_option_main_item"
                android:orientation="vertical"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/Theory_question_gotoButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="32dp"
                        android:text="Go"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.417" />

                    <TextView
                        android:id="@+id/Theory_question_goto"
                        android:layout_width="141dp"
                        android:layout_height="33dp"
                        android:layout_marginStart="16dp"
                        android:text="Đi đến câu số :"
                        android:textSize="20sp"
                        android:textStyle="bold|italic"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.425" />

                    <EditText
                        android:id="@+id/Theory_question_InputQuestionNumber"
                        android:layout_width="66dp"
                        android:layout_height="41dp"
                        android:layout_marginStart="2dp"
                        android:ems="10"
                        android:inputType="number"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/Theory_question_goto"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.465" />

                    <TextView
                        android:id="@+id/TheoryQuestion_ErrorCheck"
                        android:layout_width="223dp"
                        android:layout_height="23dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Theory_question_goto" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="377dp"
                android:layout_height="439dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/design_option_main_item"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="470dp">

                    <Button
                        android:id="@+id/Learning_theory_Next_question"
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="48dp"
                        android:layout_marginBottom="40dp"
                        android:text="Next"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <Button
                        android:id="@+id/Learning_theory_previous_question"
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="48dp"
                        android:layout_marginBottom="40dp"
                        android:text="Previous"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <CheckBox
                        android:id="@+id/Learning_theory_Answer_B"
                        android:layout_width="316dp"
                        android:layout_height="65dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/check_box_design"
                        android:gravity="center_vertical"
                        android:text="AnswerB"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Learning_theory_Answer_A" />

                    <CheckBox
                        android:id="@+id/Learning_theory_Answer_C"
                        android:layout_width="313dp"
                        android:layout_height="65dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical"
                        android:text="AnswerC"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Learning_theory_Answer_B" />

                    <CheckBox
                        android:id="@+id/Learning_theory_Answer_D"
                        android:layout_width="309dp"
                        android:layout_height="65dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical"
                        android:text="AnswerD"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Learning_theory_Answer_C" />

                    <CheckBox
                        android:id="@+id/Learning_theory_Answer_A"
                        android:layout_width="318dp"
                        android:layout_height="65dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="24dp"
                        android:gravity="center_vertical"
                        android:text="Answer A"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="386dp"
                android:layout_height="131dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/design_option_main_item"
                android:orientation="vertical"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/Theory_Question_Name"
                        android:layout_width="334dp"
                        android:layout_height="87dp"
                        android:layout_marginStart="28dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical"
                        android:text="Question Name"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>