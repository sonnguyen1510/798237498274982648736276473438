<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/OptionLayout"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="@dimen/dp_16"
    android:background="@drawable/design_option_main_item"
    android:gravity="center_horizontal"
    android:orientation="vertical"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:layout_marginStart="5dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Option_total_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="15dp"
            android:text="TextView"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Option_img"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/OptionName"
            android:layout_width="205dp"
            android:layout_height="41dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:text="Tiến độ ôn tập"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/Option_img"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/Option_img"
            android:layout_width="39dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <ProgressBar
            android:id="@+id/OptionProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="248dp"
            android:layout_height="16dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="4dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/OptionName" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="28dp"
            android:text="Tiến Độ"
            app:layout_constraintStart_toEndOf="@+id/OptionName"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/OptionProgress"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="0%"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/OptionName"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/Option_True_Question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textSize="10dp"
            app:layout_constraintStart_toEndOf="@+id/Option_total_question"
            app:layout_constraintTop_toBottomOf="@+id/OptionProgressBar" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>