<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="UI.DoExam.ChoseExam"
    android:background="#FFF6F4F4"
    >

    <TextView
        android:id="@+id/Exam2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/design_option_main_item"
        android:gravity="center_horizontal|center_vertical"
        android:text="ĐỀ 2"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Exam1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Exam1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/design_option_main_item"
        android:gravity="center_horizontal|center_vertical"
        android:text="ĐỀ 1"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Exam5"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/design_option_main_item"
        android:gravity="center_horizontal|center_vertical"
        android:text="ĐỀ 5"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Exam3" />

    <TextView
        android:id="@+id/Exam4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/design_option_main_item"
        android:gravity="center_horizontal|center_vertical"
        android:text="ĐỀ 4"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Exam3"
        app:layout_constraintTop_toBottomOf="@+id/Exam2" />

    <TextView
        android:id="@+id/Exam3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/design_option_main_item"
        android:gravity="center_horizontal|center_vertical"
        android:text="ĐỀ 3"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Exam1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Exam6"
        android:layout_width="118dp"
        android:layout_height="113dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/design_option_main_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toEndOf="@+id/Exam5"
        app:layout_constraintTop_toBottomOf="@+id/Exam4">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="82dp"
            android:layout_height="76dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="Đề Ngẫu Nhiên"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>